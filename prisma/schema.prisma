generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 String              @id @default(cuid())
  email              String?             @unique
  username           String              @unique
  role               UserRole            @default(employee)
  department         String?
  position           String?
  avatar             String?
  status             UserStatus          @default(active)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  firstname          String?
  lastname           String?
  absences           Absence[]
  activityLogs       ActivityLog[]
  correctionRequests CorrectionRequest[]
  pointages          Pointage[]
  breaks             Break[]
  sessions           Session[]
  userPermissions    UserPermission[]
  // Hiérarchie d'équipe : un employé peut avoir un chef d'équipe (team lead)
  teamLeadId         String?
  teamLead           User?               @relation("TeamLead", fields: [teamLeadId], references: [id])
  teamMembers        User[]              @relation("TeamLead")

  departments Department[]
}

model Pointage {
  id                 String              @id @default(cuid())
  userId             String
  date               DateTime
  entryTime          String?
  exitTime           String?
  duration           Int
  status             PointageStatus
  isActive           Boolean             @default(false)
  createdAt          DateTime            @default(now())
  correctionRequests CorrectionRequest[]
  user               User                @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Break {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime
  startTime String
  endTime   String?
  duration  Int?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Absence {
  id        String        @id @default(cuid())
  userId    String
  type      AbsenceType
  startDate DateTime
  endDate   DateTime
  reason    String
  status    AbsenceStatus
  comment   String?
  createdAt DateTime      @default(now())
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CorrectionRequest {
  id            String           @id @default(cuid())
  userId        String
  pointageId    String
  requestDate   DateTime
  originalEntry String?
  originalExit  String?
  newEntry      String
  newExit       String
  reason        String
  status        CorrectionStatus
  createdAt     DateTime         @default(now())
  pointage      Pointage         @relation(fields: [pointageId], references: [id], onDelete: Cascade)
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ActivityLog {
  id        String       @id @default(cuid())
  userId    String?
  action    String
  details   String
  timestamp DateTime     @default(now())
  type      ActivityType
  user      User?         @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SystemSettings {
  id                        Int      @id @default(1)
  workStartTime             String
  workEndTime               String
  breakDuration             Int
  overtimeThreshold         Int
  holidays                  Json
  updatedAt                 DateTime @updatedAt
  emailNotificationsEnabled Boolean  @default(true)
  lateAlertsEnabled         Boolean  @default(true)
  notificationsEnabled      Boolean  @default(true)
  pointageRemindersEnabled  Boolean  @default(true)
  maxSessionEndTime         String   @default("20:00")
  ldapSyncEnabled           Boolean  @default(false)
  ldapSyncIntervalMinutes   Int      @default(60)
  ldapLastSyncAt            DateTime?
}

model Department {
  id          String     @id @default(cuid())
  name        String     @unique
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  positions   Position[]
  headId      String?
  head        User?      @relation(fields: [headId], references: [id])

  @@map("Department")
}

model Position {
  id           String     @id @default(cuid())
  name         String
  description  String?
  departmentId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@unique([name, departmentId])
  @@map("Position")
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  sessionToken String   @unique
  ipAddress    String?
  userAgent    String?
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Permission {
  id          String         @id @default(cuid())
  name        String         @unique
  description String?
  category    String
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  userPermissions UserPermission[]

  pagePermissions PagePermission[]
}

model UserPermission {
  id           String      @id @default(cuid())
  userId       String
  permissionId String
  grantedBy    String
  grantedAt    DateTime    @default(now())
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  permission   Permission  @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([userId, permissionId])
}

model Page {
  id               String            @id @default(cuid())
  code             String            @unique        // identifiant logique (ex: "employees", "reports")
  path             String            @unique        // chemin de la route (ex: "/employees")
  label            String                           // libellé affiché
  category         String?                          // optionnel: pour regrouper les pages
  allowedRoles     UserRole[]                       // rôles autorisés (admin, manager, employee...)
  pagePermissions  PagePermission[]
}

model PagePermission {
  pageId       String
  permissionId String

  page         Page       @relation(fields: [pageId], references: [id], onDelete: Cascade)
  permission   Permission  @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([pageId, permissionId])
}

enum UserRole {
  employee
  team_lead
  manager
  admin
}

enum UserStatus {
  active
  inactive
  deleted
}

enum PointageStatus {
  normal
  late
  incomplete
}

enum AbsenceType {
  conge
  maladie
  autre
}

enum AbsenceStatus {
  pending
  approved
  rejected
}

enum CorrectionStatus {
  pending
  approved
  rejected
}

enum ActivityType {
  auth
  pointage
  absence
  user
  validation
}
